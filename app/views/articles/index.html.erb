<h1>Listing Articles</h1>

<% @articles.each do |article| %>
<div class="articles">
  <h3>Title: <%= article.title %></h3>
  <p>Description: <%=raw article.description %></p>
  <%= link_to 'Show', article_path(article) %>
</div>
<% end %>
 


